<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hl4350hb.map_intent.MainActivity">

    <TextView
        android:id="@+id/map_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_instructions"
        />

    <EditText
        android:id="@+id/map_search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_instructions"/>

    <Button
        android:id="@+id/map_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_button_text"
        android:layout_below="@+id/map_search_box"
        />

</RelativeLayout>
